<UserControl x:Class="LoginPage.AnimatedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginPage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Rectangle Name="borderRectangle" Stroke="Blue" RadiusX="20" RadiusY="20" Margin="10"/>

        <Label Name="placeHolderLabel" Content="Hello, World!"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Background="LightGray"
               Margin="20"/>
        
        <TextBox Name="mainTextBox" Background="Transparent" Foreground="AliceBlue" FontSize="24" 
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="10, 30, 10, 30"
                 GotFocus="OnAnimatedTextBoxGotFocused" Padding="10" BorderThickness="0"
                 LostFocus="OnAnimatedTextBoxLostFocused"/>
    </Grid>
    
</UserControl>
