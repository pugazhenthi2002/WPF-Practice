<Window x:Class="LoginPage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginPage"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Background="#FFC0E1FF">
        <local:AnimatedTextBox AnimatedTextBoxBackground="#FFC0E1FF" 
                               AnimatedTextBoxForeground="#FF7EA062" AnimatedTextBoxBorderRadius="16" 
                               AnimatedTextBoxFontSize="28" HorizontalAlignment="Left" 
                               VerticalAlignment="Top" Height="77" Width="385"/>
        <local:AnimatedTextBox AnimatedTextBoxBackground="#FFC0E1FF" 
            AnimatedTextBoxForeground="#FF7EA062" AnimatedTextBoxBorderRadius="16" 
            AnimatedTextBoxFontSize="28" HorizontalAlignment="Right" 
            VerticalAlignment="Bottom" Height="77" Width="385" />
    </Grid>

</Window>
